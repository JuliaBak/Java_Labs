<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee webapp_4_0.xsd"
         version="4.0">

    <!-- Определим сервлет MenuDBServlet -->
    <servlet>
        <servlet-name>MenuDBServlet</servlet-name>
        <servlet-class>Lab5_Servlet.MenuDBServlet</servlet-class>
    </servlet>
    <!-- Определим путь доступа к сервлету-->
    <servlet-mapping>
        <servlet-name>MenuDBServlet</servlet-name>
        <url-pattern>/MenuDBServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletActions</servlet-name>
        <servlet-class>Lab5_Servlet.ServletActions</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletActions</servlet-name>
        <url-pattern>/insert_delete_item</url-pattern>
    </servlet-mapping>


</web-app>
